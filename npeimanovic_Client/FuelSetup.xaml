                    <TextBox Width="auto" Text="Select Database Network Location            " Style="{StaticResource TextBoxStyle1}"/>
                    <Image Source="Images\open.png"  HorizontalAlignment="Right" Margin="2"/>
                </Grid>
                <Grid Margin="20,0">


                    <Button Template="{StaticResource ButtonTemplate1}" >
                        <StackPanel Orientation="Horizontal" >
                            <Image Source="Images\import_customer.png"  HorizontalAlignment="Left"/>
                            <TextBlock Text="Import" Margin="10"></TextBlock>
                        </StackPanel>
                    </Button>

                </Grid>
                
            </StackPanel>
        </Grid>
